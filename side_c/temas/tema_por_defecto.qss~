    margin: 0 3px 2px 0;
}

QTabBar::tab:selected {
    color: #bbb;
}
QTabBar::tab:top:hover {
    border-bottom-color: #bbb;
}
QTabBar::tab:top:selected {
    border-bottom: 2px solid #555;
}
QTabBar::tab:bottom:selected,
